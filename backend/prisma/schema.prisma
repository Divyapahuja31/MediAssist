generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  email               String               @unique
  passwordHash        String
  role                String               @default("PATIENT")
  createdAt           DateTime             @default(now())
  adherenceLogs       AdherenceLog[]
  devices             Device[]
  emergencyTokens     EmergencyToken[]
  medicationSchedules MedicationSchedule[]
  medications         Medication[]
  prescriptions       Prescription[]
  profile             Profile?
}

model Profile {
  id                String    @id @default(uuid())
  userId            String    @unique
  name              String?
  phone             String?
  dob               DateTime? @db.Date
  bloodGroup        String?
  allergies         Json?
  emergencyContacts Json?
  createdAt         DateTime  @default(now())
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Device {
  id            String   @id @default(uuid())
  userId        String
  platform      String?
  createdAt     DateTime @default(now())
  expoPushToken String   @unique
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("devices")
}

model Medication {
  id            String               @id @default(uuid())
  userId        String
  name          String
  formulation   String?
  notes         String?
  createdAt     DateTime             @default(now())
  stock         Int?
  updatedAt     DateTime             @updatedAt
  adherenceLogs AdherenceLog[]
  schedules     MedicationSchedule[]
  user          User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  prescriptions Prescription[]

  @@index([userId])
  @@map("medications")
}

model MedicationSchedule {
  id            String         @id @default(uuid())
  frequency     String?
  dosage        String?
  active        Boolean        @default(true)
  timezone      String?
  createdAt     DateTime       @default(now())
  endDate       DateTime?      @db.Date
  lastSent      DateTime?
  medicationId  String
  nextRunAt     DateTime?
  startDate     DateTime?      @db.Date
  timeOfDay     String?
  updatedAt     DateTime       @updatedAt
  userId        String
  daysOfWeek    Int[]
  adherenceLogs AdherenceLog[]
  medication    Medication     @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([medicationId])
  @@index([active])
  @@index([nextRunAt])
  @@map("medication_schedules")
}

model Prescription {
  id           String      @id @default(uuid())
  userId       String
  filename     String?
  meta         Json?
  medicationId String?
  uploadedAt   DateTime    @default(now())
  mimetype     String?
  size         Int?
  storageKey   String
  medication   Medication? @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([medicationId])
  @@map("prescriptions")
}

model AdherenceLog {
  id           String              @id @default(uuid())
  userId       String
  medicationId String?
  scheduleId   String?
  eventType    String
  takenAt      DateTime            @default(now())
  medication   Medication?         @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  schedule     MedicationSchedule? @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([medicationId])
  @@index([scheduleId])
  @@map("adherence_logs")
}

model EmergencyToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("emergency_tokens")
}
